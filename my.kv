<ManagerScreens@ScreenManager>:

    Menu:
        id: menu
    Sign_in:
    Sign_up:

<Menu>:
    name: 'menu'
    FloatLayout:
        Label:
            id:'label_text'
            size_hint:0.2,0.2
            pos_hint:{'center_x':0.5,'center_y':0.7}
            text:'Welcom!!!'
        Button:
            id:'Sign in'
            size_hint:0.15,0.05
            pos_hint:{'center_x':0.4,'center_y':0.5}
            text:'Sign in'
            on_release:
                app.root.current='sign_in'
        Button:
            id:'Sign up'
            size_hint:0.15,0.05
            pos_hint:{'center_x':0.6,'center_y':0.5}
            text:'Sign up'
            on_release:
                app.root.current='sign_up'

